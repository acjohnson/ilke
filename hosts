[deploy]
ilke-master-1 ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[masters]
ilke-master-1 ansible_host=192.168.1.91
ilke-master-2 ansible_host=192.168.1.184
ilke-master-3 ansible_host=192.168.1.155

[etcd]
ilke-master-1 ansible_host=192.168.1.91
ilke-master-2 ansible_host=192.168.1.184
ilke-master-3 ansible_host=192.168.1.155

[workers]
ilke-worker-1 ansible_host=192.168.1.194
ilke-worker-2 ansible_host=192.168.1.214
ilke-worker-3 ansible_host=192.168.1.215
ilke-worker-4 ansible_host=192.168.1.163
ilke-worker-5 ansible_host=192.168.1.75
ilke-worker-6 ansible_host=192.168.1.180
ilke-storage-1 ansible_host=192.168.1.73
ilke-storage-2 ansible_host=192.168.1.102
ilke-storage-3 ansible_host=192.168.1.122

[storage]

[all:vars]
# HAProxy LB is running on OpenWRT main router 192.168.1.254 for better or for worse...
## Turns out this is a bad idea... If the main router goes down then the entire k8s cluster becomes borked which means no prometheus metrics is the main router locks up, crashes, etc...
## Using ilke-master-1 instead...
#advertise_masters=192.168.1.254
#advertise_masters=kubernetes.localcluster.lan
advertise_masters=192.168.1.91

# SSH connection settings
ansible_ssh_extra_args=-o StrictHostKeyChecking=no
ansible_user=root
ansible_ssh_private_key_file=/root/.ssh/id_ed25519
ansible_python_interpreter=/usr/bin/python3

[etc_hosts]
ilke-master-1 ansible_host=192.168.1.91
