---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRole
metadata:
  name: tls-monitoring-admin
rules:
- apiGroups: [""]
  resources:
  - secrets
  verbs: ["get", "list", "watch", "create"]
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: tls-monitoring-admin
  namespace: monitoring
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: tls-monitoring-admin
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: tls-monitoring-admin
subjects:
- kind: ServiceAccount
  name: tls-monitoring-admin
  namespace: monitoring
---
apiVersion: batch/v1
kind: Job
metadata:
  name: tls-monitoring-gen
  namespace: monitoring
spec:
  ttlSecondsAfterFinished: 100
  template:
    spec:
      serviceAccountName: tls-monitoring-admin
      containers:
      - name: certgen
        image: agorakube/tls-gen-monitoring:v1.0.0
      restartPolicy: Never
